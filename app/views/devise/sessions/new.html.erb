<div class="container form-container h-80">
  <div class="row">
    <div class="col">
      <h1 class="text-center my-5"><strong>Log in</strong></h1>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "input-comic" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "input-comic" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

          <%= f.button :submit, "Log in", class: "button-confirm mt-0" %>
      <% end %>

      <%# <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
