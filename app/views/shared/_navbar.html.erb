<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="container-fluid">
      <%= link_to "Home", root_path, class: "nav-link ms-4" %>
    <%= form_with url: powers_path, method: :get, class: "d-flex w-50" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "input-comic my-3", id:"search-bar",
        placeholder: "Kamehameha, Manga, Video games..."
      %>
      <%= submit_tag "Search", class: "button-confirm my-3", id:"search-btn" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <div class="d-flex justify-content-center align-items-center">
            <%= link_to new_power_path(@power) do%>
              <button class="button-confirm me-3 m-0 d-flex align-items-center px-2">Add power</button>
            <% end %>
          <div class="nav-item dropdown">
          <a href="" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <% if @profile.profile_photo.attached? %>
            <%= cl_image_tag @profile.profile_photo.key, class: "avatar", alt: "dropdown menu", style: 'object-fit: cover' %>
          <% else %>
            <%= image_tag 'avatar.webp', class: "avatar", alt: "dropdown menu", style: 'object-fit: cover' %>
          <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", profile_path(:id), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </div>
          </div>
        <% else %>
          <%= link_to "index", root_path %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
